                  </HBox>
                  <HBox alignment="CENTER" layoutX="11.0" layoutY="172.0" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="townLabel" text="Ville :" textAlignment="CENTER">
                           <font>
                              <Font name="Segoe UI" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
