                              <Insets left="5.0" right="20.0" top="2.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="townTextField" layoutX="10.0" layoutY="120.0" promptText="Ville du client">
                           <VBox.margin>
                              <Insets left="5.0" right="20.0" top="2.0" />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onAction="#onAddClientButton" text="Ajouter un client">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Segoe UI Black" size="12.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
