                        <Label text="Nom : ">
                           <font>
                              <Font name="Segoe UI" size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <Label layoutX="264.0" layoutY="15.0" text="Prénom : ">
